{
    "name": "autowp/external-login-service",
    "description": "Login services for autowp.ru",
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Pereslegin",
            "email": "dmitry@pereslegin.ru",
            "homepage": "http://pereslegin.ru"
        }
    ],
    "minimum-stability": "beta",
    "require": {
        "php": ">=5.5.0",
        "ext-intl": "*",
        "ext-json": "*",
        "zendframework/zend-session": "*",
        "zendframework/zend-filter": ">=2.7",
        "zendframework/zend-uri": "*",
        "league/oauth1-client": "*",
        "league/oauth2-client": "^1.1",
        "league/oauth2-facebook": "^1.1",
        "league/oauth2-github": "^0.2.0",
        "league/oauth2-google": "^1.0",
        "league/oauth2-instagram": "^0.2.1",
        "league/oauth2-linkedin": "^0.4.0",
        "zendframework/zend-validator": ">=2.6",
        "zendframework/zend-json": ">=2.6",
        "j4k/oauth2-vkontakte": "*"
    },
    "require-dev": {
        "phpunit/PHPUnit": "^6.0",
        "satooshi/php-coveralls": "^1.0",
        "codeclimate/php-test-reporter": "dev-master",
        "zendframework/zend-coding-standard": "~1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Autowp\\ExternalLoginService\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AutowpTest\\ExternalLoginService\\": "test/"
        }
    },
    "scripts" : {
        "check" : [
            "@cs-check",
            "@phpmd",
            "@test"
        ],
        "cs-check" : "phpcs --encoding=utf-8",
        "cs-fix" : "phpcbf --encoding=utf-8",
        "test" : "phpunit --colors=always",
        "phpmd" : "phpmd src,test text ruleset.xml --suffixes php,phtml"
    }
}
